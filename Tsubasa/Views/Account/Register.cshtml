@model Tsubasa.Models.RegisterViewModel

@{ 
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    Page.Title = "Register";
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<section id="registerForm" class="StandardForm">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "StandardFormBox", role = "form" }))
{
        @AntiForgery.GetHtml()
        <h3>Let's get started!</h3>
        @Html.ValidationSummary("", new { @class = "error-label" })
        <fieldset>
            <ol>
                <li class="username">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @id = "username" })
                </li>
                <li class="email">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @id = "email" })
                </li>
                <li class="password">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @id = "password" })
                </li>
                <li class="confirm-password">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirmPassword" })
                </li>
            </ol>
            <input type="submit" value="Register" />
        </fieldset>
}
</section>