        <header>
            <a id="cd-logo" href="~/"><img src="~/Images/logo.png" alt="Homepage"><br />TSUBASA</a>
            <nav id="cd-top-nav">
                @if (WebSecurity.IsAuthenticated)
                {
                    <text>
                        Hello, <a class="email" href="~/Account/Manage" title="Manage">@WebSecurity.CurrentUserName</a>!
                        <form id="logoutForm" action="~/Account/Logout" method="post">
                            @AntiForgery.GetHtml()
                            <ul>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                            </ul>
                        </form>
                    </text>
                }
                else
                {
                    <ul>
                        <li><a href="~/Account/Register">Register</a></li>
                        <li><a href="~/Account/Login">Log in</a></li>
                    </ul>
                }
            </nav>
            <a id="cd-menu-trigger" href="#0"><span class="cd-menu-text">Menu</span><span class="cd-menu-icon"></span></a>
        </header>
        <main class="cd-main-content">
            <div id="body">
                @RenderSection("page", required: false)
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
                </section>
            </div>
        </main> <!-- cd-main-content -->
        <nav id="cd-lateral-nav">
            <ul class="cd-navigation">
                <li class="item-has-children">
                    <a href="#0">Games</a>
                    <ul class="sub-menu">
                        <li><a href="#0">SoulWorker</a></li>
                        <li><a href="#0">MapleStory 2</a></li>
                    </ul>
                </li> <!-- item-has-children -->
            </ul> <!-- cd-navigation -->
            <ul class="cd-navigation cd-single-item-wrapper">
                @if (WebSecurity.IsAuthenticated)
                {
                    <text>
                    <li><a class="email" href="~/Account/Manage" title="Manage">Account</a></li>
                    <form id="logoutForm" action="~/Account/Logout" method="post">
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
                    </form>
                    </text>
                }
                else
                {
                    <li><a href="~/Account/Register">Register</a></li>
                    <li><a href="~/Account/Login">Log in</a></li>
                }
            </ul> <!-- cd-single-item-wrapper -->
            <ul class="cd-navigation cd-single-item-wrapper">
                <li><a href="#0">News</a></li>
                <li><a href="#0">Contact</a></li>
                <li><a href="#0">Discord</a></li>
            </ul> <!-- cd-single-item-wrapper -->
            <div class="cd-navigation socials">
